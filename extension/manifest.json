{
  "manifest_version": 3,
  "name": "FB Auto-Lister",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["*://*.facebook.com/*"],
  "background": { "service_worker": "dist/background.js" },
  "action": { "default_popup": "popup.html" },
  "content_scripts": [{
    "matches": ["*://www.facebook.com/marketplace/create/*"],
    "js": ["dist/content.js"]
  }]
}
